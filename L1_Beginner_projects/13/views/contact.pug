extends base.pug

block styles 
    style 
        include ../static/styleContact.css
        include ../static/styleHome.css
block scripts 
    script(src="/static/script.js") 
block contents 
    h1 Contact Us 
    div#form 
        form(action="/contact", method="post") 
            div 
                input(type="text", name="name", placeholder="Enter Your Name")
                input(type="email", name="email", placeholder="Enter Your E-mail")
                input(type="text", name="contact", placeholder="Enter your contact number")
            textarea(name="message", cols="30", rows="5", placeholder="Enter the message to be dropped")
            span
                input(type="submit", value="Submit")